<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            @*<li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>*@
            <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
        </ol>
    </nav>
    <h2 class="text-center">Main Dashboard</h2>

    <!-- Row 1: Employee Overview and Attendance Summary -->
    <div class="row">
        <!-- Employee Overview -->
        <div class="col-md-6 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Employee Overview</h5>
                    <p>Total Employees:<span id="totalEmp"></span> </p>
                    <p>New Hires this Month: <span id="hireThisMonth"></span> </p>
                    <p>Terminations this Month: <span id="terminateThisMonth"></span> </p>
                </div>
            </div>
        </div>

        <!-- Attendance Summary -->
        <div class="col-md-6 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Attendance Summary</h5>
                    <p>Present: 98</p>
                    <p>On Leave: 10</p>
                    <p>Absent: 12</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 2: Leave Management and Payroll Summary -->
    <div class="row">
        <!-- Leave Management -->
        <div class="col-md-6 mb-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Leave Management</h5>
                    <p>Pending Leave Requests: 4</p>
                    <p>Upcoming Leaves: 7</p>
                </div>
            </div>
        </div>

        <!-- Payroll Summary -->
        <div class="col-md-6 mb-4">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">Payroll Summary</h5>
                    <p>Current Month's Payroll Processed: 80%</p>
                    <p>Pending Payments: 20%</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 3: Performance Overview and Recruitment Status -->
    <div class="row">
        <!-- Performance Overview -->
        <div class="col-md-6 mb-4">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Performance Overview</h5>
                    <p>Top-rated Employees: 5</p>
                    <p>Performance Reviews this Month: 12</p>
                </div>
            </div>
        </div>

        <!-- Recruitment Status -->
        <div class="col-md-6 mb-4">
            <div class="card text-white bg-secondary">
                <div class="card-body">
                    <h5 class="card-title">Recruitment Status</h5>
                    <p>Open Job Positions: 3</p>
                    <p>Applications Received: 25</p>
                    <p>Interviews Scheduled: 8</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Notifications Section -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Notifications</h5>
                    <ul>
                        <li>Employee Birthday Reminder: John Doe (Tomorrow)</li>
                        <li>Pending Leave Approval: 2 Requests</li>
                        <li>Mandatory Training: Compliance 2024 - Deadline Approaching</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>
<script type="text/javascript">
    $(document).ready(function () {
        employee_overview();
    });

    function employee_overview(){
    $.ajax({
        url:'Employee_Overview',
        type:'post',
        data:{},
        success: function (response) {
            response = JSON.parse(response);
            $("#totalEmp").text(response[0].total_employees);
            $("#hireThisMonth").text(response[0].joined_this_month);
            $("#terminateThisMonth").text(response[0].terminated_this_month);
        },
        error: function (xhr, status, error) {
            console.error('Error Status: ' + status);
            console.error('Error: ' + error);
            console.error('Response Text: ' + xhr.responseText);
        }
    });
   }
</script>

